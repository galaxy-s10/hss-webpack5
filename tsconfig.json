{
    "files": [
        "src/index.ts"
    ],
    "compilerOptions": {
        "target": "es6",
        "jsx": "preserve",
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "lib": [
            "dom"
        ],
        "skipLibCheck": true,
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js",
        "./src/**/*.tsx"
    ]
}